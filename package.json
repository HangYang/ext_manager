{
  "private": true,
  "scripts": {
    "build": "rollup -c",
    "fix": "xo --fix",
    "release": "npm run update-version && npm run zip",
    "start": "sirv distribution",
    "test": "xo",
    "update-version": "VERSION=$(utc-version); echo $VERSION; dot-json distribution/manifest.json version $VERSION",
    "watch": "rollup -c -w",
    "zip": "web-ext build --source-dir distribution"
  },
  "xo": {
    "envs": [
      "webextensions",
      "browser",
      "jquery"
    ],
    "ignores": [
      "distribution"
    ],
    "rules": {
      "unicorn/string-content": "off",
      "indent": [
        "error",
        "tab",
        {
          "ignoredNodes": [
            "TemplateLiteral > *"
          ]
        }
      ]
    }
  },
  "dependencies": {
    "webextension-polyfill": "^0.6.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^11.0.0",
    "@rollup/plugin-node-resolve": "^7.0.0",
    "dot-json": "^1.2.0",
    "rollup": "^1.20.0",
    "rollup-plugin-livereload": "^1.0.0",
    "rollup-plugin-svelte": "^5.0.3",
    "rollup-plugin-terser": "^5.1.2",
    "sirv-cli": "^0.4.4",
    "svelte": "^3.0.0",
    "utc-version": "^2.0.1",
    "web-ext": "^4.1.0",
    "xo": "^0.28.0"
  }
}
