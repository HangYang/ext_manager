{
  "private": true,
  "scripts": {
    "build": "rollup -c",
    "fix": "npm run test:lint -- --fix",
    "release": "npm run update-version && npm run zip",
    "test": "npm run test:lint && npm run build",
    "test:lint": "eslint source --ext svelte",
    "update-version": "VERSION=$(utc-version); echo $VERSION; dot-json distribution/manifest.json version $VERSION",
    "watch": "rollup -c -w",
    "zip": "web-ext build --source-dir distribution"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "webextensions": true
    },
    "plugins": [
      "svelte3",
      "unicorn"
    ],
    "extends": [
      "xo/browser",
      "plugin:unicorn/recommended"
    ],
    "rules": {
      "unicorn/filename-case": "off",
      "unicorn/prevent-abbreviations": "error",
      "import/extensions": [
        "error",
        "never",
        {
          "svelte": "always"
        }
      ],
      "no-multiple-empty-lines": [
        "error",
        {
          "max": 1,
          "maxBOF": 2,
          "maxEOF": 1
        }
      ],
      "no-new": "off"
    },
    "overrides": [
      {
        "files": "**/*.svelte",
        "processor": "svelte3/svelte3"
      }
    ],
    "globals": {
      "chrome": "off"
    }
  },
  "stylelint": {
    "extends": "stylelint-config-xo"
  },
  "dependencies": {
    "webextension-polyfill": "^0.6.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^11.1.0",
    "@rollup/plugin-node-resolve": "^7.1.3",
    "dot-json": "^1.2.0",
    "eslint": "^6.8.0",
    "eslint-plugin-svelte3": "^2.7.3",
    "rollup": "^2.6.1",
    "rollup-plugin-copy-glob": "^0.3.1",
    "rollup-plugin-livereload": "^1.2.0",
    "rollup-plugin-svelte": "^5.2.1",
    "svelte": "^3.20.1",
    "utc-version": "^2.0.1",
    "web-ext": "^4.1.0",
    "xo": "^0.29.1"
  }
}
