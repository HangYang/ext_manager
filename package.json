{
	"private": true,
	"scripts": {
		"build": "rollup --config",
		"fix": "run-p 'lint:* -- --fix'",
		"lint": "run-p lint:*",
		"lint:css": "stylelint 'source/*.css'",
		"lint:js": "eslint source --ext svelte",
		"release:cws": "webstore upload --source=distribution --auto-publish",
		"release:amo": "web-ext-submit --source-dir distribution",
		"release": "VER=$(daily-version) run-s build version release:*",
		"test": "run-p 'lint:*' build",
		"version": "dot-json distribution/manifest.json version $VER",
		"watch": "rollup --config --watch"
	},
	"eslintConfig": {
		"env": {
			"browser": true,
			"webextensions": true
		},
		"plugins": [
			"svelte3",
			"unicorn"
		],
		"extends": [
			"xo/browser",
			"plugin:unicorn/recommended"
		],
		"rules": {
			"import/extensions": [
				"error",
				"never",
				{
					"svelte": "always"
				}
			],
			"no-multiple-empty-lines": [
				"error",
				{
					"max": 1,
					"maxBOF": 2,
					"maxEOF": 1
				}
			],
			"no-new": "off",
			"unicorn/filename-case": "off"
		},
		"overrides": [
			{
				"files": "**/*.svelte",
				"processor": "svelte3/svelte3"
			}
		],
		"globals": {
			"chrome": "off"
		}
	},
	"stylelint": {
		"extends": "stylelint-config-xo"
	},
	"dependencies": {
		"webextension-polyfill": "^0.6.0"
	},
	"devDependencies": {
		"@rollup/plugin-node-resolve": "^7.1.3",
		"chrome-webstore-upload-cli": "^1.2.0",
		"daily-version": "^2.0.0",
		"dot-json": "^1.2.0",
		"eslint": "^6.8.0",
		"eslint-plugin-svelte3": "^2.7.3",
		"npm-run-all": "^4.1.5",
		"rollup": "^2.6.1",
		"rollup-plugin-copy-glob": "^0.3.1",
		"rollup-plugin-livereload": "^1.2.0",
		"rollup-plugin-svelte": "^5.2.1",
		"stylelint": "^13.3.2",
		"stylelint-config-xo": "^0.16.1",
		"svelte": "^3.20.1",
		"web-ext": "^4.1.0",
		"xo": "^0.29.1"
	}
}
